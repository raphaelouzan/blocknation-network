body
  background-color #fff
  min-height 100%
  font-family Graphik,sans-serif
  -webkit-font-smoothing antialiased
  line-height 1.25
  color #37383c

*
  box-sizing border-box
  margin 0px
  padding 0px

a
  text-decoration none
  color #B02A7E

.flex
  display flex

a.btn
  padding 0 3.57143em
  color #fff
  background #37383c
  transition background .2s ease-in-out
  display inline-block
  min-height 50px
  line-height 50px
  white-space nowrap
  cursor pointer
  text-shadow 0 1px 5px rgba(0,0,0,.1)
  font-size 14px
  font-weight 600
  text-transform uppercase
  letter-spacing -.03em

  @media screen and (max-width: 460px)
    display none

  &:hover
    background #B02A7E
    color #fff

@media screen and (max-width: 460px)
  .apply-link
    display inline

@media screen and (min-width: 461px)
  .apply-link
    display none

.overflow
  overflow hidden

.fifty-pixels-padding
  padding 50px 50px !important

/* Containers */

.lg-container
  max-width 1040px
  margin 0 auto
  padding 2vw 0vw 0vw 0vw
  position relative

  @media screen and (max-width: 1120px)
    padding 0px 0px


.half
  width 50%

  @media screen and (max-width: 700px)
    width 100%


/* Nav */

nav
  width 100%
  padding-top 40px

  @media screen and (max-width: 990px)
    padding 0px 50px

  @media screen and (max-width: 650px)
    padding 40px 0px 10px 0px

  ul
    display flex
    justify-content flex-end
    position relative

    @media screen and (max-width 960px)
      height 150px
      justify-content center

    li
      display inline
      margin-right 30px
      align-self center

      @media screen and (max-width 960px)
        margin-top 20px

      @media screen and (max-width 660px)
        margin-right 0px
        padding 10px 10px !important

      &:last-child
        margin-right 0px

      a
        color #101012
        transition color 1.2s cubic-bezier(0.190, 1.000, 0.220, 1.000)
        font-size 14px
        font-weight 600
        text-transform uppercase
        letter-spacing -.03em

        @media screen and (max-width 660px)
          font-size 12px

        &:hover
          color rgba(55,56,60,.4)

      .logo
        position absolute
        top 8px
        left 0px

        @media screen and (max-width: 960px)
          display block
          position absolute
          top 8px
          right 0px
          left 0px
          display block
          margin 0 auto

/* Hero */

.hero, .footer-cta
  display flex
  position relative

  h1
    padding 150px 0px 0px 0px
    line-height 42px
    letter-spacing -0.1vw
    color #101012
    font-weight 600
    font-size 38px
    margin-bottom 20px

    @media screen and (max-width 960px)
      padding 60px 0px 0px 0px

  p
    vertical-align baseline
    font-size 20px
    line-height 1.5

.hero-container
  top 400px
  width 100%

.hero-container-2
  top 100px
  position absolute
  width 100%

/* Img */

.img-container
  display flex
  justify-content flex-end
  width 100%
  position relative
  overflow hidden

  img
    height 45vw

/* Join */

.join, .whofor, .location
  padding 120px 0 0px
  position relative

  h2
    display block
    position relative
    margin 0 0 20px
    line-height 1
    font-size 32px
    font-weight 600
    padding-bottom 30px
    color #101012

    &:before
      content ""
      display block
      position absolute
      top -40px
      width 110px
      height 3px
      background #101012

  p
    font-size 20px
    letter-spacing -0.67px
    line-height 32px
    position relative
    z-index 10

  ul
    padding 0
    margin 0
    vertical-align baseline
    border 0
    list-style none
    display flex
    -ms-flex-wrap wrap
    flex-wrap wrap
    align-items stretch
    justify-content flex-start
    flex-direction row

    li
      margin-bottom 0
      width 33.33333%
      max-width none
      overflow hidden
      height 100%

      img
        width 90%
        display block

      h2
        margin-bottom 1.875em
        margin-top 30px
        font-weight 600
        line-height 1.2
        color #2b3542
        font-size 16px

        &:before
          display none

  span
    color #b7b7b7
    font-size 18px


  span.apply
    position relative !important
    left 0px
    top 40px

    a.apply
      text-transform uppercase
      text-decoration none
      font-weight 600
      font-size 13px
      color #29c9ed
      transition color .3s

      &:hover
        color #159fbe

.join-container
  position absolute
  top 100px
  width 100%

/* Who For */

.whofor

  p
    font-size 16px !important
    letter-spacing -0.67px
    line-height 32px

  .text
    width 100%

  .sm-padding
    padding-top 70px

  ul
    display flex
    margin-top 70px

    li
      width 50%

      div
        img
          width 158px

      h3
        padding 20px 0px 0px 0px
        margin-top 0px
        color #101012
        line-height 1
        letter-spacing -.02em
        font-weight 700
        font-size 19px
        line-height 28px

        &:first-child
          padding 20px 20px 20px 0px !important



/* Cities */

.location
  padding-bottom 0px

.cities-container
  position absolute
  top 500px
  width 100%


/* Footer CTA */

.flex-center
  align-items center

.footer-cta
  // background-color #101012
  padding-top 200px
  margin-top 100px

  .lg-container
    position relative
    min-height 300px
    width 100%

    @media screen and (max-width: 750px)
      display block

  h2
    color #ffffff
    font-size 64px
    left 0px
    line-height 1.06

    @media screen and (max-width: 750px)
      width 100%
      display block

  .btn-container
    position absolute
    right 0%

    @media screen and (max-width: 750px)
      position relative
      display block
      margin-top 90px
      width 100%

    @media screen and (max-width: 460px)
      text-align center

  a.btn
    background #DF4F2A
    color #fff
    padding 0 3.57143em
    transition all .2s ease-in-out
    min-height 50px
    line-height 53px
    margin-top 16px

    @media screen and (max-width: 460px)
      display block !important
      text-transform center

    &:hover
      background-color #B02A7E


/* Footer */

.footer-bg
  background-color #101012
  background-image url('../images/bg.svg')
  background-position 0px
  background-repeat no-repeat
  opacity 100%
  height 700px
  padding-bottom 400px

  @media screen and (max-width: 860px)
    padding-bottom 100px !important
    height 700px

footer
  min-height 120px

  .lg-container
    position relative
    min-height 112px

    @media screen and (max-width: 860px)
      display block

  h3
    font-size 15px
    color hsla(0,0%,100%,.8)
    letter-spacing -0.2px
    font-weight 400
    opacity 0.9
    position absolute

    @media screen and (max-width: 860px)
      position relative
      text-align center

    a
      color #ffffff
      font-weight 600

      .pink-highlight-1
        width 159px
        top 10px
        left 445px

  .start
    top 33px
    left 0px
    color #ffffff
    font-weight 500
    font-size 17px

  .center
    top 54px
    left 0px
    right 0px
    text-align center

    a
     color #F7C34C

     &:hover
       color #ffffff

  .end
    top 54px
    right 0px
    font-size 13px
    opacity 0.7

    @media screen and (max-width: 860px)
      padding-top 20px

/* Animations */

.grey-sq
  background-color #f5f5f5 !important

.grey-sq-2
  background-color #f5f5f5 !important
  top 460px

.blue-sq, .grey-sq, .grey-sq-2
  content ''
  display block
  height 300px
  width 200px
  opacity 0.4
  position absolute
  background-color #F9E9DB
  z-index -1
  top 160px
  animation move-blue 50s linear alternate infinite

  @keyframes move-blue
    0%
      left 10%
      top 10%

    50%
      left 50%

    100%
      left 100%
      top 10%
      height 200px
      width 300px

.blue-sq-long
  height 800px
  -top 300px
  width 400px

.cloud-1
  display block
  position absolute
  right 0px
  top -180px
  animation cloud 40s linear alternate infinite

  img
    width 117px

  @keyframes cloud
    0%
      right 0%

    50%
      right 10%

    100%
      right 20%

.sm-square1, .sm-square2, .sm-square3, .sm-square4, .sm-square5, .sm-square-t, .sm-square1-t, .sm-square2-t, .sm-square3-t, .sm-square4-t
  content ''
  display block
  height 5px
  width 5px
  position absolute
  background-color #1C1D1E
  top 160px
  animation move 30s linear alternate infinite

  @keyframes move
    0%
      left 0%

    50%
      left 50%

    100%
      left 100%

.sm-square1
  margin-left 0px

.sm-square2
  margin-left 300px

.sm-square3
  margin-left 600px

.sm-square4
  margin-left 900px

.sm-square5
  margin-left 1200px

.sm-square1-t
  margin-left -300px
  margin-top -100px

.sm-square2-t
  margin-left 0px
  margin-top -100px

.sm-square3-t
  margin-left 300px
  margin-top -100px

.sm-square4-t
  margin-left 600px
  margin-top -100px

.text-load-in
  position relative
  display inline-block

.text-load-in-word
  margin-right .22em
  display inline-block

.hidden
  visibility hidden

.opacity
  opacity 0

.logo-ease-in
  animation logo-ease 1s cubic-bezier(.165,.84,.44,1) 1.2s
  display block

@keyframes logo-ease
  0%
    transform translate3d(0px, -100%, 0px)
    opacity 0
    visibility hidden
    animation-delay 2s

  100%
    transform translate3d(0px, 0%, 0px)
    opacity 1
    visibility visible

.content-ease
  animation ease-in-p 2s cubic-bezier(.165,.84,.44,1)
  display block
  overflow hidden

@keyframes ease-in-p
  0%
    transform translate3d(0px, 100%, 0px)
    opacity 0

  100%
    transform t

@keyframes text-fade-in
  0%
    opacity 0
    transform translate3d(0px, 50%, 0px)
  100%
    opacity 1
    transform translate3d(0px, 0%, 0px)

.content-ease
  animation ease-in-p 2s cubic-bezier(.165,.84,.44,1)
  display block
  overflow hidden
